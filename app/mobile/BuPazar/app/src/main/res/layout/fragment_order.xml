<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".page.fragment.OrderFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rectangle_border"
        android:id="@+id/address_box">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/address_header_bar">

            <TextView
                android:id="@+id/shipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:text="Shipping Address"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/secondary_blue"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16sp"
                android:layout_toEndOf="@id/shipping"
                android:src="@drawable/ic_shipping" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/address_header_bar"
            android:id="@+id/card_number_bar"
            android:background="@drawable/rectangle_border">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTextWhite"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/address_text"
                    android:text="Ev(Bebek Mah/Beşiktaş/İstanbul"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:imeOptions="actionDone"/>
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rectangle_border"
        android:id="@+id/card_box"
        android:layout_below="@id/address_box">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_header_bar"
            android:background="@drawable/rectangle_border">

            <TextView
                android:id="@+id/paymentInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:text="Payment Info"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/secondary_blue"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16sp"
                android:layout_toEndOf="@id/paymentInfo"
                android:src="@drawable/ic_cashless_payment" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pay_with_another_card"
                android:text="Pay with another card"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_header_bar"
            android:id="@+id/card_bar"
            android:background="@drawable/rectangle_border">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTextWhite"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/card_name_text"
                    android:text="Yasar's Mastercard"
                    android:textColor="@color/black"
                    android:padding="8dp"/>
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rectangle_border"
        android:id="@+id/installment_box"
        android:layout_below="@id/card_box">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/installment_header_bar">

            <TextView
                android:id="@+id/installment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:text="Installment Options"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/secondary_blue"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16sp"
                android:layout_toEndOf="@id/installment"
                android:src="@drawable/ic_installment" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/installment_header_bar"
            android:id="@+id/installment_bar"
            android:background="@drawable/rectangle_border">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/one_installment_checkbox"
                android:checked="true"
                android:buttonTint="@color/secondary_blue"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="One Installment"
                android:textColor="@color/black"
                android:layout_toEndOf="@id/one_installment_checkbox"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="###"
                android:textColor="@color/black"
                android:id="@+id/installment_price"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"/>

        </RelativeLayout>

    </RelativeLayout>

    <CheckBox
        android:id="@+id/gdpr_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/installment_box"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:buttonTint="@color/secondary_blue"/>

    <TextView
        android:id="@+id/gdpr_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/gdpr_checkbox"
        android:layout_toEndOf="@id/gdpr_checkbox"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text="By clicking this box I agree to the terms of GDPR"
        android:textColor="@color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gdpr_checkbox"
        android:layout_marginTop="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rectangle_border"
        android:id="@+id/place_order_box">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/total_text"
            android:text="Total"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_alignTop="@id/place_order_button"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/total_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="###"
            android:textSize="18sp"
            android:layout_below="@id/total_text"
            android:layout_alignStart="@id/total_text"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:textColor="@color/secondary_blue"/>

        <LinearLayout
            android:id="@+id/place_order_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/secondary_blue"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/place_order_text"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PLACE ORDER"
                android:textColor="#fff"
                android:textSize="17dp"
                android:gravity="center"
                android:letterSpacing="0.09"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>