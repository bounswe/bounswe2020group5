<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="13dp">

    <TextView
        android:id="@+id/txtChatUsername"
        android:text="John's STORE"
        android:background="@drawable/my_chat_bubble"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:radius="60dp"
        android:padding="15dp"
        android:textSize="25sp"
        android:elevation="5dp"
        android:textColor="#ffffff"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtOtherUser" />

    <TextView
        android:visibility="gone"
        android:id="@+id/lastMessageTime"
        android:text="12:00 PM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/txtChatUsername"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtChatUsername" />
</androidx.constraintlayout.widget.ConstraintLayout>