<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".page.fragment.categories.CategoryPersonalCare">

    <RelativeLayout
        android:id="@+id/categoriesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondary_blue">

        <TextView
            android:id="@+id/categoriesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="4dp"
            android:text="@string/personal"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="54dp"
            android:layout_height="57dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="4dp"
            android:background="@color/white"
            android:contentDescription="@string/app_name"
            android:src="@drawable/bupazar_logo" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/perfume"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/categoriesTitle"
        android:background="@drawable/transparent_rectangle_border">

        <ImageView
            android:id="@+id/orderImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/ic_perfume" />

        <TextView
            android:id="@+id/electronicstext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@+id/orderImage"
            android:text="@string/perfume"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/ElectronicsArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="18dp"
            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/makeup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/perfume"
        android:background="@drawable/transparent_rectangle_border">

        <ImageView
            android:id="@+id/fashionImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/ic_makeup" />

        <TextView
            android:id="@+id/fashionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@+id/fashionImage"
            android:text="@string/makeup"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/fashionArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/skinCare"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/makeup"
        android:background="@drawable/transparent_rectangle_border">

        <ImageView
            android:id="@+id/personalCareImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/ic_cream" />

        <TextView
            android:id="@+id/personalCareText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@+id/personalCareImage"
            android:text="@string/skin_care"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/personalCareArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/oralCare"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/skinCare"
        android:background="@drawable/transparent_rectangle_border">

        <ImageView
            android:id="@+id/homeKitchenImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/ic_tooth_paste" />

        <TextView
            android:id="@+id/homeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@+id/homeKitchenImage"
            android:text="@string/oral_care"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/homeArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hairCare"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/oralCare"
        android:background="@drawable/transparent_rectangle_border">

        <ImageView
            android:id="@+id/sportsImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/ic_shampoo" />

        <TextView
            android:id="@+id/sportsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="14dp"
            android:layout_toEndOf="@+id/sportsImage"
            android:text="@string/hair_care"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/sportsArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

    </RelativeLayout>

</RelativeLayout>