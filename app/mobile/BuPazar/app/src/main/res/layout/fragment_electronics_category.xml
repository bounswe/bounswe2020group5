<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".page.fragment.categories.CategoryElectronics">

    <RelativeLayout
        android:id="@+id/categoriesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondary_blue">

        <TextView
            android:id="@+id/categoriesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="4dp"
            android:text="@string/electronics"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="54dp"
            android:layout_height="57dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="4dp"
            android:background="@color/white"
            android:contentDescription="@string/app_name"
            android:src="@drawable/bupazar_logo" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/smartPhone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/categoriesTitle"
        android:background="@drawable/transparent_rectangle_border">


        <ImageView
            android:id="@+id/orderImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/ic_mobile_phone" />

        <TextView
            android:id="@+id/smartPhoneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@+id/orderImage"
            android:text="@string/smartphone"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/ElectronicsArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="18dp"
            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/whiteAppliances"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/smartPhone"
        android:background="@drawable/transparent_rectangle_border">

        <ImageView
            android:id="@+id/fashionImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/ic_oven" />

        <TextView
            android:id="@+id/whiteAppliancesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@+id/fashionImage"
            android:text="@string/whiteAppliances"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/fashionArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/pctablet"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/whiteAppliances"
        android:background="@drawable/transparent_rectangle_border">

        <ImageView
            android:id="@+id/personalCareImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/ic_computer" />

        <TextView
            android:id="@+id/pcTabletText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@+id/personalCareImage"
            android:text="@string/pc_amp_tablet"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <ImageView
            android:id="@+id/personalCareArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/photoCamera"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/pctablet"
        android:background="@drawable/transparent_rectangle_border">

        <ImageView
            android:id="@+id/homeKitchenImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/ic_camera" />

        <TextView
            android:id="@+id/photoCameraText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@+id/homeKitchenImage"
            android:text="Photo &amp; Camera"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <ImageView
            android:id="@+id/homeArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/gameConsoles"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/photoCamera"
        android:background="@drawable/transparent_rectangle_border">

        <ImageView
            android:id="@+id/videoGameImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/ic_game_console" />

        <TextView
            android:id="@+id/videoGameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="14dp"
            android:layout_toEndOf="@+id/videoGameImage"
            android:text="@string/game_amp_game_consoles"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/videoGameArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="18dp"
            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

    </RelativeLayout>

    <Button
        android:id="@+id/buttonShowAll"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/gameConsoles"
        android:layout_marginTop="25dp"
        android:text="@string/show_all"
        android:background="@drawable/button_design"
        android:textAllCaps="false"
        android:outlineAmbientShadowColor="@color/secondary_blue"
        android:textColor="@color/primary_maroon"
        android:textSize="18sp" />


</RelativeLayout>